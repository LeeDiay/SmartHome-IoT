{
    "openapi": "3.0.0",
    "info": {
        "title": "SmartHome IoT API",
        "description": "API documentation for SmartHome IoT system",
        "contact": {
            "email": "leducanh1503.works@gmail.com"
        },
        "version": "1.0.0"
    },
    "paths": {
        "/control/toggle-device": {
            "post": {
                "tags": [
                    "Device Control"
                ],
                "summary": "Toggle device status",
                "description": "Toggle the status of a device (on/off) and publish an MQTT message to update its status.",
                "operationId": "toggleDevice",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "device_id"
                                ],
                                "properties": {
                                    "device_id": {
                                        "description": "The ID of the device to be toggled",
                                        "type": "integer",
                                        "example": 1
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Device toggled successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "device": {
                                            "properties": {
                                                "name": {
                                                    "description": "Name of the device",
                                                    "type": "string",
                                                    "example": "Quạt"
                                                },
                                                "status": {
                                                    "description": "Current status of the device",
                                                    "type": "boolean",
                                                    "example": true
                                                },
                                                "last_toggle_at": {
                                                    "description": "The last time the device was toggled",
                                                    "type": "string",
                                                    "format": "date-time",
                                                    "example": "15:32:10 02-10-2024"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Device not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "error"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Device not found"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Failed to connect to MQTT broker",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "error"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Failed to connect to MQTT broker"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/device-history": {
            "get": {
                "tags": [
                    "Device History"
                ],
                "summary": "Get device toggle history",
                "description": "Display a paginated list of device toggle history records with optional search functionality.\n\nThis method allows users to view device toggle history and filter by specific date or time.\nIt supports pagination and searches by exact or partial time matches.",
                "operationId": "52ee9f8eb154f1e83d6134b405ed11f3",
                "parameters": [
                    {
                        "name": "page_size",
                        "in": "query",
                        "description": "The number of records to return per page (default is 10)",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "example": 10
                        }
                    },
                    {
                        "name": "search_time",
                        "in": "query",
                        "description": "Search for toggles by date (YYYY-MM-DD), time (HH:MM:SS), or time (HH:MM)",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "example": "2024-10-02"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of device toggle history",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "deviceHistory": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "device_id": {
                                                        "type": "integer",
                                                        "example": 1
                                                    },
                                                    "device_name": {
                                                        "type": "string",
                                                        "example": "Quạt"
                                                    },
                                                    "status": {
                                                        "type": "boolean",
                                                        "example": true
                                                    },
                                                    "toggled_at": {
                                                        "type": "string",
                                                        "example": "15:32:10 02-10-2024"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        },
                                        "pageSize": {
                                            "type": "integer",
                                            "example": 10
                                        },
                                        "searchTime": {
                                            "type": "string",
                                            "example": "2024-10-02"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/sensor-data": {
            "get": {
                "tags": [
                    "Sensor Data"
                ],
                "summary": "Get all sensor data",
                "description": "Display a listing of sensor data.\n\nRetrieves all data from the `sensor_data_history` table and sorts it by the received time. \nData is paginated with 10 records per page.",
                "operationId": "1708cf552bb89f976515da328297d53e",
                "responses": {
                    "200": {
                        "description": "A list of sensor data",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "current_page": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "id": {
                                                        "type": "integer",
                                                        "example": 1
                                                    },
                                                    "temperature": {
                                                        "type": "number",
                                                        "example": 22.5
                                                    },
                                                    "humidity": {
                                                        "type": "number",
                                                        "example": 60
                                                    },
                                                    "light": {
                                                        "type": "number",
                                                        "example": 350
                                                    },
                                                    "received_at": {
                                                        "type": "string",
                                                        "example": "2024-10-03T10:00:00"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/sensor-data/latest": {
            "get": {
                "tags": [
                    "Sensor Data"
                ],
                "summary": "Get the latest sensor data",
                "description": "Get the latest sensor data.",
                "operationId": "b5fb2fdf5cc93e726595698acb7a7e74",
                "responses": {
                    "200": {
                        "description": "The latest sensor data",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "current_page": {
                                            "description": "Current page number",
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "id": {
                                                        "description": "Unique identifier for the sensor data entry",
                                                        "type": "integer",
                                                        "example": 3153
                                                    },
                                                    "temperature": {
                                                        "description": "Current temperature reading in degrees Celsius as a string",
                                                        "type": "string",
                                                        "example": "30.00"
                                                    },
                                                    "humidity": {
                                                        "description": "Current humidity reading in percentage as a string",
                                                        "type": "string",
                                                        "example": "53.00"
                                                    },
                                                    "light": {
                                                        "description": "Current light level reading in lumens",
                                                        "type": "integer",
                                                        "example": 2700
                                                    },
                                                    "received_at": {
                                                        "description": "Timestamp when the data was received in ISO 8601 format",
                                                        "type": "string",
                                                        "format": "date-time",
                                                        "example": "2024-10-02T16:11:37.000000Z"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        },
                                        "first_page_url": {
                                            "description": "URL of the first page",
                                            "type": "string",
                                            "example": "http://127.0.0.1:8000/sensor-data/latest?page=1"
                                        },
                                        "from": {
                                            "description": "Index of the first item on the current page",
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "last_page": {
                                            "description": "Total number of pages",
                                            "type": "integer",
                                            "example": 68
                                        },
                                        "last_page_url": {
                                            "description": "URL of the last page",
                                            "type": "string",
                                            "example": "http://127.0.0.1:8000/sensor-data/latest?page=68"
                                        },
                                        "links": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "url": {
                                                        "description": "URL of the page",
                                                        "type": "string",
                                                        "example": "http://127.0.0.1:8000/sensor-data/latest?page=2",
                                                        "nullable": true
                                                    },
                                                    "label": {
                                                        "description": "Label for the page link",
                                                        "type": "string",
                                                        "example": "2"
                                                    },
                                                    "active": {
                                                        "description": "Indicates if this page link is active",
                                                        "type": "boolean",
                                                        "example": false
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        },
                                        "next_page_url": {
                                            "description": "URL of the next page",
                                            "type": "string",
                                            "example": "http://127.0.0.1:8000/sensor-data/latest?page=2"
                                        },
                                        "path": {
                                            "description": "Base URL of the request",
                                            "type": "string",
                                            "example": "http://127.0.0.1:8000/sensor-data/latest"
                                        },
                                        "per_page": {
                                            "description": "Number of items per page",
                                            "type": "integer",
                                            "example": 10
                                        },
                                        "prev_page_url": {
                                            "description": "URL of the previous page",
                                            "type": "string",
                                            "example": null,
                                            "nullable": true
                                        },
                                        "to": {
                                            "description": "Index of the last item on the current page",
                                            "type": "integer",
                                            "example": 10
                                        },
                                        "total": {
                                            "description": "Total number of items",
                                            "type": "integer",
                                            "example": 671
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/sensor-data/filter": {
            "post": {
                "tags": [
                    "Sensor Data"
                ],
                "summary": "Filter sensor data",
                "description": "Filter sensor data based on time range and attributes.",
                "operationId": "395fb0f000d998eb1694104362872902",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "start_date",
                                    "end_date"
                                ],
                                "properties": {
                                    "start_date": {
                                        "type": "string",
                                        "format": "date",
                                        "example": "2024-10-01"
                                    },
                                    "end_date": {
                                        "type": "string",
                                        "format": "date",
                                        "example": "2024-10-03"
                                    },
                                    "sort_by": {
                                        "type": "array",
                                        "items": {
                                            "type": "string",
                                            "example": "temperature"
                                        }
                                    },
                                    "sort_order": {
                                        "type": "string",
                                        "example": "asc"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Filtered sensor data",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "id": {
                                                "type": "integer",
                                                "example": 1
                                            },
                                            "temperature": {
                                                "type": "number",
                                                "example": 22.5
                                            },
                                            "humidity": {
                                                "type": "number",
                                                "example": 60
                                            },
                                            "light": {
                                                "type": "number",
                                                "example": 350
                                            },
                                            "received_at": {
                                                "type": "string",
                                                "example": "2024-10-03T10:00:00"
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Device Control",
            "description": "Device Control"
        },
        {
            "name": "Device History",
            "description": "Device History"
        },
        {
            "name": "Sensor Data",
            "description": "Sensor Data"
        }
    ]
}