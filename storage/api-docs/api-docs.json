        "/sensor-data/filter": {
            "get": {
                "tags": [
                    "Sensor Data"
                ],
                "summary": "Filter sensor data",
                "description": "Retrieve filtered sensor data based on search criteria and sorting options",
                "operationId": "filterSensorData",
                "parameters": [
                    {
                        "name": "search",
                        "in": "query",
                        "description": "Search string for filtering by date, temperature, humidity, or light",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "example": "25.5"
                        }
                    },
                    {
                        "name": "pageSize",
                        "in": "query",
                        "description": "Number of items per page",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "example": 10
                        }
                    },
                    {
                        "name": "sort_order",
                        "in": "query",
                        "description": "Sorting order: 'asc' or 'desc'",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "enum": [
                                "asc",
                                "desc"
                            ],
                            "example": "asc"
                        }
                    },
                    {
                        "name": "sort_by",
                        "in": "query",
                        "description": "Field to sort by: 'received_at', 'temperature', 'humidity', or 'light'",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "example": "received_at"
                        }
                    },
                    {
                        "name": "filter",
                        "in": "query",
                        "description": "Field to filter by: 'temperature', 'humidity', 'light', or 'received_at'",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "enum": [
                                "temperature",
                                "humidity",
                                "light",
                                "received_at"
                            ],
                            "example": "temperature"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "description": "Filtered sensor data",
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "id": {
                                                        "type": "integer",
                                                        "example": 1
                                                    },
                                                    "temperature": {
                                                        "type": "number",
                                                        "example": 25.5
                                                    },
                                                    "humidity": {
                                                        "type": "number",
                                                        "example": 60.3
                                                    },
